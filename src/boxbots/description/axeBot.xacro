<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Ancho: 0.3m , grosor de rueda 0.05m  Alto: 0.6m Largo: 0.6m -->

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="orange">
        <color rgba="1 0.6 0.2 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0.5 1"/>
    </material>
    
    <material name="gray">
        <color rgba="0.62 0.62 0.62 1"/>
    </material>

    <material name="red">
        <color rgba="1 0.4 0.4 1"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"></link>

    <!-- chassis -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>
    
    <link name="chassis">
        <visual>
            <origin xyz="0.3 0 -0.14" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/chassis.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="green"/>
        </visual>
        
        <collision>
            <origin xyz="0.3 0 -0.14" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/chassis.dae" scale="0.09 0.1 0.1"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0.3 0 -0.14" rpy="${pi/2} 0 ${pi/2}"/>
            <mass value="1.00000000"/>
            <inertia ixx="1060563.74807894" ixy="-997.20714643" ixz="3526.37132554" iyy="1179332.83720922" iyz="169857.75932349" izz="412666.53274241"/>
        </inertial>

    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Green</material>
    </gazebo>

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="left_wheel"/>
        <!-- y=+(ancho/2+grosor_rueda/2)  -->
        <origin xyz="0 0.225 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <origin xyz="0.287 -0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/left_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="gray"/>
        </visual>
        
        <collision>
            <origin xyz="0.287 -0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/left_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="1.0" length="0.05" radius="0.1">
            <origin xyz="0.287 -0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Gray</material>
    </gazebo>

    <!-- RIGHT WHEEL -->
    
    <joint name="right_wheel_joint" type="continuous">
        <parent link="chassis"/>
        <child link="right_wheel"/>
        <!-- y=-(ancho/2+grosor_rueda/2)  -->
        <origin xyz="0 -0.225 0"/>
        <axis xyz="0 -1 0"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <origin xyz="0.287 0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/right_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="gray"/>
        </visual>
        
        <collision>
            <origin xyz="0.287 0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/right_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="1.0" length="0.05" radius="0.1">
            <origin xyz="0.287 0.225 -0.1427" rpy="${pi/2} 0 ${pi/2}"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Gray</material>
    </gazebo>

    <!-- BALL WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.36 0 -0.08"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <origin xyz="-0.06 0 -0.09" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/ball_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="orange"/>
        </visual>
        
        <collision>
            <origin xyz="-0.06 0 -0.09" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/ball_wheel.dae" scale="0.10 0.10 0.10"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="1.0" radius="0.02">
            <origin xyz="-0.06 0 -0.09" rpy="${pi/2} 0 ${pi/2}"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- TAIL -->

    <joint name="tail_joint" type="fixed">
        <parent link="chassis"/>
        <child link="tail"/>
        <origin xyz="-0.15 0 0.25"/>
    </joint>

    <link name="tail">
        <visual>
            <origin xyz="0.4 0 -0.43" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/tail.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="orange"/>
        </visual>
        
        <collision>
            <origin xyz="0.4 0 -0.43" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/tail.dae" scale="0.10 0.10 0.10"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0.4 0 -0.43" rpy="${pi/2} 0 ${pi/2}"/>
            <mass value="1.00000000"/>
            <inertia ixx="66692.65404649" ixy="0.00000000" ixz="-0.00000000" iyy="262901.93093076" iyz="23568.08856438" izz="245071.70572291"/>
        </inertial>
    
    </link>

    <gazebo reference="chassis_tail">
        <material>Gazebo/Orange </material>
    </gazebo>

    <!-- AXE -->

    <joint name="axe_joint" type="fixed">
        <parent link="chassis"/>
        <child link="axe"/>
         <origin xyz="0.6 0 0.01"/>
    </joint>

    <link name="axe">

        <visual>
            <origin xyz="-0.3 0 -0.15" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/axe.dae" scale="0.10 0.10 0.10"/>
            </geometry>
            <material name="red"/>
        </visual>
        
        <collision>
            <origin xyz="-0.3 0 -0.15" rpy="${pi/2} 0 ${pi/2}"/>
            <geometry>
                <mesh filename="file://$(find boxbots)/description/meshes/AxeBot/axe.dae" scale="0.10 0.10 0.10"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="-0.3 0 -0.15" rpy="${pi/2} 0 ${pi/2}"/>
            <mass value="1.00000000"/>
            <inertia ixx="544544.92866685" ixy="0.05936438" ixz="15.78266815" iyy="1117851.27450615" iyz="3282.66550122" izz="590531.59263961"/>
        </inertial>
    
    </link>
    
    <gazebo reference="axe">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- LIDAR SUPPORT LINK-->

    <joint name="lidar_support_joint" type="fixed">
        <parent link="tail"/>
        <child link="lidar_support"/>
        <origin xyz="-0.07 0 0"/>
    </joint>

    <link name="lidar_support">
        <visual>
            <origin xyz="0 0 0.035"/>
            <geometry>
                <cylinder radius="0.05" length="0.07"/>
            </geometry>
            <material name="red"/>
        </visual>
        
        <collision>
            <origin xyz="0 0 0.035"/>
            <geometry>
                <cylinder radius="0.05" length="0.07"/>
            </geometry>
        </collision>
        
        <xacro:inertial_cylinder mass="0.1" length="0.07" radius="0.05">
            <origin xyz="0 0 0"/>
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="lidar_support">
        <material>Gazebo/Black</material>
    </gazebo>
</robot>

